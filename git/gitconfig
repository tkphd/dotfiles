[user]
  name = Trevor Keller
  signingkey = 0x210CD7CA9908C3F6

[include]
  path = ~/.gitcontact

[alias]
  br = branch
  brr = branch -r
  cf = config --local --list
  cm = commit -m
  co = checkout
  hist = log --graph --full-history --all --pretty=format:'%Cred%h%Creset %ad %s %C(yellow)%d%Creset %C(bold blue)«%an»%Creset' --date=short
  lgg  = log --graph                      --pretty=format:'%Cred%h%Creset %ad %s %C(yellow)%d%Creset %C(bold blue)«%an»%Creset' --date=short
  lg =   log --graph --oneline --decorate --all
  st = status
  work = config --local user.email trevor.keller@nist.gov

[color]
  ui = auto
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = bold

[color "diff"]
  meta = cyan
  frag = cyan
  old = red
  new = green

[color "status"]
  added = green bold
  changed = red bold
  untracked = blue bold

[core]
  editor = "/usr/bin/emacsclient -t"
  # pager = diff-so-fancy | less --tabs=4 -RFX
  pager = delta
  autocrlf = input

[delta]
  navigate = true  # use n and N to move between diff sections

[diff]
  # tool = meld
  # path = "/usr/bin/meld"
  colorMoved = default

[init]
  # If this folder does not already exist, please
  # echo "ref: refs/heads/main" > ~/.config/git/template/HEAD
  templateDir = ~/.config/git/template/
  defaultBranch = main

[interactive]
  diffFilter = delta --color-only

[merge]
  # tool = "/usr/bin/meld"
  conflictstyle = diff3

[push]
  default = simple

[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process

[credential]
  helper = netrc -f ~/.netrc -v

[pull]
  rebase = false
