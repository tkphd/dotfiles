[include]
  path = ~/.gitlocal

[alias]
  br = branch
  brr = branch -r
  cf = config --local --list
  cm = commit -m
  co = checkout
  hist = log --graph --full-history --all --pretty=format:'%Cred%h%Creset %ad %s %C(yellow)%d%Creset %C(bold blue)«%an»%Creset' --date=short
  lgg  = log --graph                      --pretty=format:'%Cred%h%Creset %ad %s %C(yellow)%d%Creset %C(bold blue)«%an»%Creset' --date=short
  lg =   log --graph --oneline --decorate --all
  st = status
  work = config --local user.email trevor.keller@nist.gov
  fixauth = commit --amend --author='Trevor Keller <trevor.keller@nist.gov>'

[color]
  ui = auto
  branch = auto
  diff   = auto
  status = auto

[color "branch"]
  current = bold

[color "diff"]
  meta = cyan
  frag = cyan
  old  = red
  new  = green

[color "status"]
  added     = green bold
  changed   = red   bold
  untracked = blue  bold

[core]
  editor = "/usr/bin/emacs -nw"
  autocrlf = input

[diff]
  # tool = meld
  # path = "/usr/bin/meld"
  colorMoved = default

[init]
  defaultBranch = main

[merge]
  conflictstyle = diff3

[push]
  default = simple

[filter "lfs"]
  required = true
  clean   = git-lfs clean -- %f
  smudge  = git-lfs smudge -- %f
  process = git-lfs filter-process

[credential]
  helper = netrc -f ~/.netrc -v

[pull]
  rebase = false
